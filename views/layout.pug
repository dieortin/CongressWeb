- 
	var sectionTabs = [
		{name: 'Homepage', url: '/'},
		{name: 'Participants', url: '/participants'},
		{name: 'Schedule', url: '/schedule'},
		{name: 'Travel and accomodation', url: '/travel'}]

doctype html
html
	head
		title= title + " | EREP'18"
		link(href='https://fonts.googleapis.com/css?family=Proza+Libre|Trocchi' rel='stylesheet')
		link(rel='stylesheet', href='/stylesheets/style.css')
		block extraHead
	body
		if headerImage
			div.bg-image
		header
			nav
				h1 
					a(href='/') EREP'18
				ul.section-tabs
					each tab in sectionTabs
						li
							a(href=tab.url) #{tab.name}
				if user
					div.current-session
						span Logged in as 
							span.bold= user.firstName
						a.logout(href='/logout') Sign out
				else
					div.current-session
						a.button.login(href='/login') Login / Registration
		- const sectionMarginClass = headerImage ? 'image-margin' : 'no-image-margin'
				
		section.main(class=sectionMarginClass)
			block content
		footer
			div.sponsors-grid
				each val, index in ['one', 'two', 'three', 'four', 'five']
					div(class=val) Sponsor number #{index} 

